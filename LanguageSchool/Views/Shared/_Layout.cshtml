<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Szkoła językowa BeLingua</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/home_marketable.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top " style="background-color: darkorange">
        <div class="col-md-1">
        </div>
        <a class="navbar-brand" padding="15px" href="@Url.Action("Index", "Home")">
            <img src="~/images/Logo.png" alt="Site Logo" style="height:25%; width: 25%" />
        </a>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kursy", "Index", "Course", new {@style="color:white" })</li>
                    <li>@Html.ActionLink("Materiały", "Index", "Home", new { @style = "color:white" })</li>
                    <li>@Html.ActionLink("Testy", "Index", "Home", new { @style = "color:white" })</li>
                    <li>@Html.ActionLink("Dane kontaktowe", "Index", "Home", new { @style = "color:white" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top: 70px; padding-bottom: 70px;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
