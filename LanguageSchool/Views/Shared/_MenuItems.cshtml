@using LanguageSchool.Models.ViewModels

@if (Session["Menus"] != null)
{
    var menus = (List<MenuViewModel>)Session["Menus"];

    foreach (MenuViewModel m in menus)
    {
        <li>@Html.ActionLink(m.ShownName, m.ActionName, m.ControllerName, new { @style = "color:white" })</li>
    }
}

