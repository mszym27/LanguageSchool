@model LanguageSchool.Models.ViewModels.TableHeaderViewModel 

@{
    var sortDirRev = (string)ViewBag.sortDirection;

    sortDirRev = (sortDirRev == "desc") ? "asc" : "desc";
}

@Html.ActionLink(Model.ShownName, "Index",
    new
    {
        sortColumn = Model.ColumnName,
        sortDirection = sortDirRev,
        page = 1
    },
    new { style = "text-decoration:none; color:black" }
)