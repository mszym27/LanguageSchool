@model LanguageSchool.Models.ViewModels.MessageViewModels.SendToUserInputVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.UserId)

    @Html.AntiForgeryToken()

    <div class="container">
        @Html.Partial("_PartHeader", "Wyślij komunikat do użytkownika")
        <div class="row form-horizontal">
            <div class="bordered col-md-12">
                <div class="row">
                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <strong>Adresat</strong>
                        </div>
                        <div class="col-md-4">
                            @Html.HiddenFor(model => model.UserName)
                            @Html.DisplayFor(model => model.UserName)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <strong>Temat</strong>
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Topic, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Topic, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <strong>Systemowy</strong>
                        </div>
                        <div class="col-md-4">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsSystem)
                                @Html.ValidationMessageFor(model => model.IsSystem, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <strong>Treść</strong>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Contents, new { htmlAttributes = new { @class = "widetextarea form-control", @style = "width:830px;height:300px" } })
                            @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row col-md-12">
                <div class="col-md-2 col-md-offset-9">
                    <input type="submit" value="Wyślij" class="btn btn-block btn-default" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}