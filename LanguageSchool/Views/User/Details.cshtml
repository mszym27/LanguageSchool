@model LanguageSchool.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Użytkownik</h2>

<div class="col-xs-12">
    <h4>@Model.UserData.Name @Model.UserData.Surname</h4>
    <hr />
    <div class="col-xs-4">
        <label>
            Login:
        </label>

        @Html.DisplayFor(model => model.Login)
    </div>

    <div class="col-xs-4">
        <div class="col-xs-6">
            <label>                
                Hasło:
            </label>
        </div>

        <div class="col-xs-6" id="placeholder" style="display: block">
            ●●●●●●●●
        </div>
        <div class="col-xs-6" id="password" style="display: none">
            @Html.DisplayFor(model => model.Password)
        </div>
    </div>

    <div class="col-xs-4">
        <label>
            Pokaż hasło:
        </label>
        <input type="checkbox" onclick="showPassword()">
    </div>
</div>

<script>
function showPassword() {
    var placeholder = document.getElementById("placeholder");
    var password = document.getElementById("password");

    if (placeholder.style.display === "block") {
        placeholder.style.display = "none";
        password.style.display = "block";
    } else {
        placeholder.style.display = "block";
        password.style.display = "none";
    }
}
</script>