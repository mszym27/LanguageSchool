@model IEnumerable<LanguageSchool.Models.UserData>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-bordered">
    <tr>
        <th>
            Użytkownik
        </th>
        <th>
            Numer telefonu
        </th>
        <th>
            Adres email
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name @item.Surname
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAdress)
            </td>
        </tr>
    }

</table>
