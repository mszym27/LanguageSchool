<script>
    function RoleChanged(RoleId)
    {
        var TeacherRoleId = 3;

        timetable = document.getElementById("timetable");

        if (RoleId == TeacherRoleId)
            timetable.style.display = "block";
        else
            timetable.style.display = "none";
    }
</script>