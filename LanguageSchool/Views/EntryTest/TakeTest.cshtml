@using LanguageSchool.Models.ViewModels

@model LanguageSchool.Models.ViewModels.TestViewModel

@{
    ViewBag.Title = "TakeTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body background="~/images/Background_test_faded.jpg">
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourseId)
    @Html.HiddenFor(model => model.Points)
    @Html.HiddenFor(model => model.Questions)
    
    <h1 class="display-3">@Model.Name</h1>

    if (Model.Comment != "-")
    {
        <p>@Model.Comment</p>
    }

    <hr />

    <table class="table">
        @foreach (var question in Model.Questions)
        {
            @Html.HiddenFor(q => question.Points)

            <tr>
                <td>
                    @question.Contents

                    @foreach (var answer in question.Answers)
                    {
                        <div class="form-group">
                            <div class="col-md-2">
                                @answer.Answer
                            </div>
                            <div class="col-md-10">
                                @Html.RadioButton(question.Id.ToString(), answer.IsMarked)

                                @Html.HiddenFor(a => answer.IsCorrect)
                            </div>
                        </div>
                    }
                </td>
            </tr>
        }
    </table>

    <hr width="95%">

    <div class="container w-100 h-100">
        <div class="row align-items-center h-100">
            <div class="col-md-3">
                <button class="btn btn-block btn-primary" type="button" onclick="location.href='@Url.Action("Index", "EntryTest", new { id = @Model.CourseId })'">Lista testów</button>
            </div>
            <div class="col-md-6">
            </div>
            <div class="col-md-3">
                <input type="submit" value="Oceń" class="btn btn-block btn-primary" />
            </div>
        </div>
    </div>
} 
</body>