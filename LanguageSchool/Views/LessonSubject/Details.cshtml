@model LanguageSchool.Models.LessonSubject

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row col-md-12">
        <div class="thumbnail col-md-4">
            <div class="col-md-4">
                <button class="btn btn-block btn-default" type="button" onclick="location.href='@Url.Action("Edit", "LessonSubject")'">Edytuj</button>
            </div>
            <div class="col-md-4">
                @{
                    var DeActivateButtonValue = "Aktywuj";

                    if (@Model.IsActive)
                    {
                        DeActivateButtonValue = "Dezaktywuj";
                    }
                }
                <button class="btn btn-block btn-primary" type="button" onclick="location.href='@Url.Action("DeActivate", "LessonSubject", new { id = Model.Id })'">@DeActivateButtonValue</button>
            </div>

            <div class="col-md-4">
                <button class="btn btn-block btn-danger" type="button" onclick="location.href='@Url.Action("Delete", "LessonSubject")'">Usuń</button>
            </div>
        </div>
    </div>
    <div class="row thumbnail col-md-12">
        <div class="row">
            <div class="col-md-3">
                <label>
                    Utworzono
                </label>
            </div>
            <div class="col-md-3">
                @Model.CreationDate.ToString("yyy/MM/dd")
            </div>
            <div class="col-md-3">
                <label>
                    Nazwa
                </label>
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label>
                    Aktywny
                </label>
            </div>
            <div class="col-md-3">
                @{
                    string active = "nie";

                    if (Model.IsActive) { active = "tak"; }
                }

                @active
            </div>
            <div class="col-md-3">
                <label>
                    Opis
                </label>
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
    </div>   
    <div class="row col-md-12">
        <div class="thumbnail col-md-2">
            <div class="col-md-12">
                <button class="btn btn-block btn-default" type="button" onclick="location.href='@Url.Action("Upload", "Material", new { lessonSubjectId = Model.Id })'">Dodaj materiały</button>
            </div>
        </div>
    </div>

    @if (Model.Materials.Any())
    {
        <div class="row thumbnail col-md-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        Utworzono
                    </th>
                    <th>
                        Nazwa
                    </th>
                    <th>
                        Komentarz
                    </th>
                </tr>
                @foreach (var item in Model.Materials)
                {
                    <tr>
                        <td>
                            @item.CreationDate.ToString("yyy/MM/dd")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                        <td>
                            <a href="@Url.Action("Download", "Material", new { id = item.Id })" style="color:black">
                                <span class="glyphicon glyphicon-download" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</div>