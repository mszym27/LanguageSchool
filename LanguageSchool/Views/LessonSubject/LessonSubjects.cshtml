@model LanguageSchool.Models.ViewModels.GroupViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @{ Html.RenderPartial("_PartHeader", "Prowadzący:" + Model.Teacher.Fullname); }
    <div class="row">
        <div class="bordered col-md-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        Utworzono
                    </th>
                    <th>
                        Nazwa
                    </th>
                    <th>
                        Opis
                    </th>
                </tr>
                @foreach (var lessonSubject in Model.LessonSubjects.Where(ls => ls.IsActive))
                {
                    <tr>
                        <td>
                            @lessonSubject.CreationDate.ToString("yyy/MM/dd")
                        </td>
                        <td>
                            @Html.ActionLink(lessonSubject.Name, "Index", "Material", new { Id = lessonSubject.Id }, null)
                        </td>
                        <td>
                            @lessonSubject.Description
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    @if(Model.Tests.Any())
    {
    { Html.RenderPartial("_PartHeader", "Testy"); }
        <div class="row">
            <div class="bordered col-md-12">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Nazwa
                        </th>
                        <th>
                            Opis
                        </th>
                        <th>
                            Liczba pytań
                        </th>
                    </tr>
                    @foreach (var test in Model.Tests.Where(t => t.IsActive))
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(test.Name, "Take", "Test", new { testId = test.Id }, null)
                            </td>
                            <td>
                                @test.Comment
                            </td>
                            <td>
                                @test.NumberOfClosedQuestions/@test.NumberOfOpenQuestions/@(test.NumberOfOpenQuestions + test.NumberOfClosedQuestions)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    }
</div>
